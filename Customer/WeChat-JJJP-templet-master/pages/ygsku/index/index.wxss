.picker_group {
    align-items: center;
    border-bottom: 1rpx solid #efefef;
    color: #888;
    display: flex;
    font-size: 30rpx;
    height: 85rpx;
    justify-content: center;
    line-height: 85rpx;
}

.picker_group picker {
    border: 1rpx solid #64bff1;
    border-radius: 30rpx;
    color: #64bff1;
    height: 55rpx;
    line-height: 55rpx;
    margin: 0 2%;
    padding: 0 2%;
}