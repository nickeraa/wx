<view class="cu-custom">
    <view class="cu-bar fixed none-bg text-white bg-img" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <view bindtap="back" class="action canui-head-title">
            <text class="icon-back"></text>查询店铺取货 </view>
    </view>
</view>
<view style="background-color:white;padding-top: 8rem;">
    <view class="page" style="margin-top:20px;background-color:white;">
        <view class="picker_group " style="margin-left:-35px;">
            <view class="title icon-title text-orange up" style="font-size:15px;">取货日期：</view>
            <picker bindchange="bindDateChange" end="{{date2}}" mode="date" value="{{date}}">
                <view class="picker"> {{date}} </view>
            </picker> 至 <picker bindchange="bindDateChange2" end="2050-01-01" mode="date" start="{{date}}" value="{{date2}}">
                <view class="picker"> {{date2}} </view>
            </picker>
        </view>
    </view>
    <view class="cu-form-group sp" style="margin-top:2rem;">
        <button bindtap="selectvip" class="cu-btn canui-color-gradual shadow-blur round lg sp" style="width:95%;">
            <text class="icon-search"></text> 查询预定取货数据</button>
    </view>
    <view class="padding flex text-center text-grey bg-white shadow-warp" hidden="{{flag}}">
        <view class="flex flex-sub flex-direction solid-right">
            <view class="text-xxl text-blue" style="margin-top: 20px;">{{djamt}}</view>
            <view class="margin-top-sm" style="margin-top: 1rem;">
                <text class="icon-favorfill text-blue">预定取货金额</text>
            </view>
        </view>
    </view>
    <view hidden="{{flag}}" style="padding-top: 2rem;">
        <view class="Grid-sku" style="background-color:#056b6b;color:white;height: 2.5rem;">
            <view class="stp" style="margin-left:5rem;width:40%;">
                <text> 店铺</text>
            </view>
            <view class="stp" style="width:50%;">
                <text>预定取货金额</text>
            </view>
        </view>
    </view>
    <view bindtap="djlist" class="Grid-sku action solid-bottom center" data-amtsold="{{item.AMTSOLD}}" data-xf_name="{{item.XF_NAME}}" data-xf_storecode="{{item.XF_STORECODE}}" hidden="{{flag}}" style="height:5rem;background-color:#E0EEEE;margin-top: 3px;" wx:for="{{rejob}}" wx:key="id">
        <view class="stp" style="margin-left:2rem;width:30%;margin-top: 10px;">
            <text>{{item.XF_STORECODE}} {{item.XF_NAME}}</text>
        </view>
        <view class="stp" style="width:70%;margin-top: 12px;margin-left:5px;">
            <text>{{item.AMTSOLD}}</text>
        </view>
    </view>
    <view style="height:3px;background-color:white;"></view>
    <view style="height:10rem;"></view>
</view>
<wxs module="subData">
module.exports = (function(val) {
    if (val == undefined || val == '' || val == null) {
        return
    };
    if (val.length > 10) {
        return (val.substring(0, 10))
    } else {
        return (val)
    }
});
</wxs>