<view class="cu-custom">
    <view class="cu-bar fixed none-bg text-white bg-img" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
        <navigator class="action canui-head-title" hoverClass="none" openType="navigateBack">
            <text class="icon-back"></text>号码登记
        </navigator>
    </view>
</view>
<view style="overflow-x: hidden;">
    <view class="cu-form-group" style="padding-top:50px;">
        <view class="title icon-title text-orange">登记店铺：</view>
        <picker bindchange="bindPickerChange2" range="{{picker2}}" rangeKey="LCCODE" value="{{picker2[index2].XF_STORECODE}}">
            <view class="picker dp ">
                <text>{{index2?picker2[index2].LCCODE:'请选择登记店铺'}}</text>
                <text class="cuIcon-triangledownfill"></text>
            </view>
        </picker>
    </view>
    <view class="cu-form-group">
        <view class="title icon-title text-orange">输入会员卡号：</view>
        <input bindinput="getvipcode" class="radius dp" name="vipcode" placeholder="请输入会员卡号精准查询" value="{{vipcode}}"></input>
    </view>
    <view style="display: flex;width: 100%;margin-top: 1rem;margin-bottom: 1rem;">
        <view bindtap="listvipcode" style="margin-left:8rem;width:20%;margin-top:5px;width:30%;">
            <button class="cu-btn bg-gradual-green shadow-blur round">查询</button>
        </view>
        <view bindtap="listvip" style="margin-left:10px;margin-top:5px;width:50%;">
            <button class="cu-btn  shadow-blur round" style="background-color: #03a9f4;color:white;">会员数据查询工具</button>
        </view>
    </view>
    <view hidden="{{f1}}">
        <view class="cu-form-group" style="padding-top: 10px;">
            <view class="title icon-title text-orange up">会员姓名：</view>
            <text class="text-grey">{{vipname}}</text>
        </view>
        <view class="cu-form-group">
            <view class="title icon-title text-orange up">会员等级：</view>
            <text class="text-grey">{{grade}}</text>
        </view>
        <view class="cu-form-group">
            <view class="title icon-title text-orange up">会员店铺：</view>
            <text class="text-grey">{{store}}</text>
        </view>
        <view class="cu-form-group">
            <view class="title icon-title text-orange up">跟进员工：</view>
            <text class="text-grey">{{xf_name}}</text>
        </view>

        <view class="cu-form-group" style="padding-top: 0.3rem;height:3rem;">

            <view class="text-orange" style='width: 60px;'>登记类型：</view>
            <radio-group bindchange="radioChange" class="radio-group dp">
                <label class="radio dp">
                    <radio class="round red" value="0"></radio>单钞
                </label>
                <label class="radio dp">
                    <radio class="round red" value="1"></radio>10顺号
                </label>
                <label class="radio dp">
                    <radio class="round red" value="2"></radio>百顺号
                </label>
                <label class="radio dp">
                    <radio class="round red" value="3"></radio>百顺号封装版
                </label>
            </radio-group>
        </view>
    </view>
    <view hidden='{{f2}}'>
        <view class="cu-form-group" style='height: 3rem;'>
            <view class="title icon-title text-orange">龙钞尾号：</view>
            <input style='background-color: rgb(243, 231, 231);height: 2rem;' bindinput="getwhnumber" maxlength="3" type="number" class="radius dp" name="whnumber" placeholder="请输入后3位数尾号" value="{{whnumber}}"></input>
            <view bindtap="add" style="width:30%;height: 2rem;">
                <button class="cu-btn bg-gradual-green shadow-blur round" style='font-size: 15px;'>添加尾号</button>
            </view>
        </view>
    </view>
    <view hidden='{{f3}}'>
        <view class="cu-form-group" style='height: 3rem;'>
            <view class="title icon-title text-orange">龙钞尾号：从</view>
            <input style='background-color: rgb(243, 231, 231);height: 2rem;' bindinput="getsnumber"  type="number" class="radius dp" name="snumber" placeholder="" value="{{snumber}}"></input>
            <view class="title text-orange">至</view>
            <input style='background-color: rgb(243, 231, 231);height: 2rem;' bindinput="getenumber"  type="number" class="radius dp" name="enumber" placeholder="" value="{{enumber}}"></input>
            <view bindtap="add" style="width:30%;height: 2rem;">
                <button class="cu-btn bg-gradual-green shadow-blur round" style='font-size: 15px;width: 100%;'>添加尾号</button>
            </view>
        </view>
    </view>



    <view hidden="{{f4}}">
        <view class="Grid-sku" style="background-color:#056b6b;color:white;height: 2rem;">
            <view style="margin-left:1rem;width:20%;margin-top: 5px;">
                <text> 店铺名称</text>
            </view>
            <view style="width:25%;margin-top: 5px;">
                <text> 客户名称</text>
            </view>
            <view style="width:20%;margin-top: 5px;margin-left: -25px;">
                <text>登记类型</text>
            </view>
            <view style="width:20%;margin-top: 5px;">
                <text>龙钞尾号</text>
            </view>
            <view style="width:20%;margin-top: 5px;">
                <text>操作</text>
            </view>

        </view>
    </view>

    <view class=" margin-top" hidden="{{f4}}" style='margin-bottom: 15rem;'>

        <view  wx:for="{{rets}}" wx:key="id">
            <view  style="height:3rem;display: flex;width: 100%;">
                <view  style="margin-left:0.5rem;width: 25%;">
                    <text class=""> {{item.STORENAME}} </text>
                </view>
                <view  style='width: 20%;margin-left: 10px;'>
                    <text class=""> {{item.XF_NAME}} </text>
                </view>
                <view style="width: 25%;">
                    <text>{{item.SETYPE}}</text>
                </view>
                <view style="width: 20%;">
                    <text>{{item.WHNUMBER}}</text>
                </view>
            <view style='width:30%;'>
            <button bindtap="delnumber" class="cu-btn round " data-id="{{item.ID}}" style="border-radius: 0.8rem;background-color:#D3D3D3;width:5rem;margin-top:-2px;width: 100%;">
                <text class="icon-delete">删除</text>
            </button>
        </view>

    </view>

    <view style='height: 1px;background-color: white;'></view>


</view>

</view>


</view>